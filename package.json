{
  "name": "vertice-discord-bot",
  "version": "1.0.0",
  "description": "Bot de administração completo para Discord - Sistema Vértice",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "deploy": "gcloud run deploy vertice-bot --source . --region=us-central1",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push"
  },
  "keywords": [
    "discord",
    "bot",
    "moderation",
    "typescript",
    "vertice"
  ],
  "author": "Sistema Vértice",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "inversify": "^6.0.2",
    "redis": "^4.6.12",
    "reflect-metadata": "^0.2.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
