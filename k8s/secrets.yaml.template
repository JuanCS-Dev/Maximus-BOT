# Template for Kubernetes secrets
# Run scripts/populate-secrets.sh to generate actual secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: discord-secrets
  namespace: discord-bot
type: Opaque
stringData:
  token: "DISCORD_TOKEN_PLACEHOLDER"
  client-id: "CLIENT_ID_PLACEHOLDER"
  virustotal-api-key: "VIRUSTOTAL_API_KEY_PLACEHOLDER"
  anthropic-api-key: "ANTHROPIC_API_KEY_PLACEHOLDER"
---
apiVersion: v1
kind: Secret
metadata:
  name: database-config
  namespace: discord-bot
type: Opaque
stringData:
  url: "postgresql://vertice:PASSWORD_PLACEHOLDER@127.0.0.1:5432/vertice_bot?schema=public&connection_limit=10&pool_timeout=20"
---
apiVersion: v1
kind: Secret
metadata:
  name: redis-config
  namespace: discord-bot
type: Opaque
stringData:
  url: "redis://10.55.151.91:6379"
